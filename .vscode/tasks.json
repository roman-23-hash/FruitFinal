{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "venv\\Scripts\\activate && uvicorn app.main:app --reload --port 8000",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        },
        "cwd": "${workspaceFolder}\\backend"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "servers",
        "reveal": "always",
        "label": "Backend :8000"
      },
      "isBackground": true
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        },
        "cwd": "${workspaceFolder}\\frontend"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "servers",
        "reveal": "always",
        "label": "Frontend :5173"
      },
      "isBackground": true
    },
    {
      "label": "Start All",
      "dependsOn": ["Start Backend", "Start Frontend"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}